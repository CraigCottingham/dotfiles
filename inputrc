"\e[3~]": delete-char
"\e[A": history-search-backward
"\e[B": history-search-forward
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

# make tab completion case-insensitive
set completion-ignore-case on
# display all choices without requiring double-TAB
set show-all-if-ambiguous on
# cycle through a menu of choices instead of dumping a big list
TAB: menu-complete
